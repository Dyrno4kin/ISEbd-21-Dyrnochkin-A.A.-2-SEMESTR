<Window x:Class="FishShopWPFView.FormStocksLoad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishShopWPFView"
        mc:Ignorable="d"
        Title="Загруженность складов" Height="450" Width="383.918">
    <Grid Loaded="Grid_Loaded">
        <DataGrid x:Name="dataGridView" HorizontalAlignment="Left" Height="446" Margin="10,41,0,0" VerticalAlignment="Top" Width="356">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="Stock" Binding="{Binding stockName}" Width="120"/>
                <DataGridTextColumn x:Name="Ingredient" Binding="{Binding ingredientName}" ClipboardContentBinding="{x:Null}" Width="120"/>
                <DataGridTextColumn x:Name="Count" Binding="{Binding count}" Width="120"/>
            </DataGrid.Columns>

        </DataGrid>
        <Button x:Name="buttonSaveToExcel" Content="Сохранить в Excel" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" VerticalAlignment="Top" Width="144" Click="ButtonSaveToExcel_Click"/>

    </Grid>
</Window>
